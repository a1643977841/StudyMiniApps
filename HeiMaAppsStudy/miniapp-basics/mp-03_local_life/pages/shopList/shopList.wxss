/* pages/shopList/shopList.wxss */
.shop-item {
    display: flex;
    padding: 15rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    margin: 15rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.thumb image{
    width: 250rpx;
    height: 250rpx;
    display: block;
    margin-right: 15rpx;
}
.info {
    display: flex;
    /* 纵向布局 */
    flex-direction: column;
    /* 在纵向上分散对齐 */
    justify-content: space-around;
    font-size: 24rpx;
}
.shop-title {
    font-weight: bold;
}